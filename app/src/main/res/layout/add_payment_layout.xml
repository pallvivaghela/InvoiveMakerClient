<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_5"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/payment_option_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/et_bg_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/payment_option_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_5"
            android:paddingTop="@dimen/margin_10"
            android:paddingRight="@dimen/margin_5"
            android:text="@string/payment_options"
            android:textColor="@color/toolbar_text"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/payment_option"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/bg_border_gray"
            android:elevation="@dimen/margin_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:text=""
            android:textColor="@android:color/black"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/signed_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/et_bg_border"
        android:elevation="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_5"
        android:paddingTop="@dimen/margin_10"
        android:paddingRight="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_10"
        android:text="Signature"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16" />

    <EditText
        android:id="@+id/invoice_notes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:layout_margin="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/et_bg_border"
        android:elevation="@dimen/margin_5"
        android:hint="@string/notes"
        android:paddingStart="@dimen/margin_5"
        android:textColor="@color/transparent_grey"
        android:textSize="@dimen/text_size_16" />
</LinearLayout>
