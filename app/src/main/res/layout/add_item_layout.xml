<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_item_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="@dimen/margin_5"
    android:background="@drawable/bg_border_gray"
    android:elevation="@dimen/margin_5"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_border_gray"
        android:drawableEnd="@drawable/ic_add_white_24dp"
        android:drawablePadding="@dimen/margin_10"
        android:drawableTint="@color/colorPrimaryDark"
        android:padding="@dimen/margin_8"
        android:text="@string/add_item"
        android:textColor="#e64a19"
        android:textSize="@dimen/margin_16" />

    <TextView
        android:id="@+id/unit_cost_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_toEndOf="@+id/add_item"
        android:gravity="right"
        android:text="1 * Rs0.00"
        android:textColor="@color/toolbar_text" />

    <TextView
        android:id="@+id/total_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unit_cost_quantity"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_3"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_toRightOf="@+id/add_item"
        android:gravity="right"
        android:text="Rs0.00"
        android:textColor="@color/blue"
        android:textSize="16sp" />
</RelativeLayout>
